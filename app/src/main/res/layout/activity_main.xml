<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhaozhihui.dailypractice.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider_line"
        android:showDividers = "middle|end">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="AlxUrl_解析html中a标签href"
            android:onClick="onAlxUrl"
            android:gravity="center"
            android:background="@drawable/common_bg_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_bg_selector"
            android:gravity="center"
            android:onClick="onDrawView"
            android:text="自定义View_红色圆点根据手指运动" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_bg_selector"
            android:gravity="center"
            android:onClick="onOpenBase"
            android:text="创建默认的BaseActivity" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_bg_selector"
            android:gravity="center"
            android:onClick="onConstrintLayout"
            android:text="support包下面ConstraintLayout初体验" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_bg_selector"
            android:gravity="center"
            android:onClick="onUpdateVersion"
            android:text="自定义版本升级" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_bg_selector"
            android:gravity="center"
            android:onClick="onTablelayout"
            android:text="官方api-TableLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_bg_selector"
            android:gravity="center"
            android:onClick="onFrameLayout"
            android:text="官方api-FrameLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_bg_selector"
            android:gravity="center"
            android:onClick="onGridLayout"
            android:text="官方api-GridLayout" />

    </LinearLayout>

</ScrollView>
